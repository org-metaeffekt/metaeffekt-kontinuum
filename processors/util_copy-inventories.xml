    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-parent</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>util_copy-inventories</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>copy-inventories</id>
                        <phase>process-resources</phase>
                        <configuration>
                            <target>
                                <mkdir dir="${output.dir}"/>
                                <copy todir="${output.dir}">
                                    <filelist dir="." files="${inventories.list}" />
                                </copy>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>  <!-- This plugin is only relevant to deliver better error messages to the caller of this pom. -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>inventories.list</property>
                                    <message>You must set the parameter 'inventories.list' to specify the inventories you want to copy.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.dir</property>
                                    <message>You must set the parameter 'output.dir' to specify to which directory the provided list of files should be copied.</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>