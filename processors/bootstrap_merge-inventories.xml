    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-parent</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>bootstrap_merge-inventories</artifactId>
    <packaging>pom</packaging>

    <properties>
        <inventory.includes>*.xls</inventory.includes>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.metaeffekt.core</groupId>
                <artifactId>ae-inventory-maven-plugin</artifactId>
                <version>${ae.core.version}</version>
                <executions>
                    <execution>
                        <id>merge-inventories-dir</id>
                        <goals>
                            <goal>merge-inventories</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <sourceInventoryBaseDir>${input.inventory.dir}</sourceInventoryBaseDir>
                            <sourceInventoryIncludes>${inventory.includes}</sourceInventoryIncludes>
                            <targetInventory>${output.inventory}</targetInventory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventory.dir</property>
                                    <message>You must set the parameter 'input.inventory.dir' to specify the directory containing the inventories to be merged.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.inventory</property>
                                    <message>You must set the parameter 'output.inventory' to specify the merged output inventory's name and location.</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>