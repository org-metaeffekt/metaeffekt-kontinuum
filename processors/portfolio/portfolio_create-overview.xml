    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-parent</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>portfolio_create-overview</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.artifact.analysis</groupId>
                <artifactId>ae-inventory-overview-html-report</artifactId>
                <version>${ae.artifact.analysis.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>create-report</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <baseDirectory>${input.inventory.dir}</baseDirectory>
                    <inputInventoryPath>${input.inventory.path}</inputInventoryPath>
                    <advisorInventoryPath>${input.advisor.inventories.dir}</advisorInventoryPath>

                    <outputFile>${output.overview.file}</outputFile>

                    <dashboardsPath>${input.dashboards.dir}</dashboardsPath>
                    <reportsPath>${input.reports.dir}</reportsPath>

                    <securityPolicyFile>${input.security.policy.file}</securityPolicyFile>

                </configuration>
                <dependencies>
                    <!-- FIXME: provide plugin with complete dependencies -->
                    <dependency>
                        <groupId>org.apache.logging.log4j</groupId>
                        <artifactId>log4j-api</artifactId>
                        <version>2.23.1</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventory.dir</property>
                                    <message>You must set the parameter 'input.inventory.dir' to specify the directory of the input
                                        inventory for the overview.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.inventory.path</property>
                                    <message>You must set the parameter 'input.inventory.path' to specify the path of the input
                                        inventory for the overview.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.security.policy.file</property>
                                    <message>You must set the parameter 'input.security.policy.file' to specify the security policy file for overview generation.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.dashboards.dir</property>
                                    <message>
                                        You must set the parameter 'input.dashboards.dir' to specify the directory of the dashboards to be copied.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.reports.dir</property>
                                    <message>
                                        You must set the parameter 'input.reports.dir' to specify the directory of the reports to be copied.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.advisor.inventories.dir</property>
                                    <message>
                                        You must set the parameter 'input.advisor.inventories.dir' to specify the directory of the advisor inventories to be copied.
                                    </message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>