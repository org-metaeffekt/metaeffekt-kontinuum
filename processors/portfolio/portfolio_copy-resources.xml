    <parent>
        <groupId>com.metaeffekt.kontinuum</groupId>
        <artifactId>ae-kontinuum-processors</artifactId>
        <version>KONTINUUM-SNAPSHOT</version>
        <relativePath>../_common_/ae-kontinuum-processors.xml</relativePath>
    </parent>

    <artifactId>portfolio_copy-resources</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <executions>
                    <execution>
                        <id>copy-source-inventories</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${output.resources.dir}/source-inventories</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${input.inventories.dir}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>**/*.xlsx</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-dashboards</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${output.resources.dir}/assessment-dashboards</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${input.dashboards.dir}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>**/*.html</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-reports</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${output.resources.dir}/vulnerability-reports</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${input.reports.dir}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>**/*.pdf</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-advisor-inventory</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${output.resources.dir}/advisor-inventories</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${input.advisor.inventories.dir}</directory>
                                    <filtering>false</filtering>
                                    <includes>
                                        <include>**/*.xlsx</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventories.dir</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.dashboards.dir</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.reports.dir</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.advisor.inventories.dir</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.resources.dir</property>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>