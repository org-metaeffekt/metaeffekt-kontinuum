    <parent>
        <groupId>com.metaeffekt.kontinuum</groupId>
        <artifactId>ae-kontinuum-processors</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>convert_inventory-to-spdx</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.artifact.analysis</groupId>
                <artifactId>ae-inventory-conversion-plugin</artifactId>
                <version>${ae.artifact.analysis.version}</version>
                <executions>
                    <execution>
                        <id>convert-inventory-to-spdx</id>
                        <goals>
                            <goal>convert-inventory-to-spdx</goal>
                        </goals>
                        <configuration>
                            <input>${input.inventory.file}</input>
                            <output>${output.bom.file}</output>
                            <documentName>${param.document.name}</documentName>
                            <description>${param.document.description}</description>
                            <documentIdPrefix>${param.document.id.prefix}</documentIdPrefix>
                            <organization>${param.document.organization}</organization>
                            <organizationUrl>${param.document.organization.url}</organizationUrl>
                            <person>${param.document.person}</person>
                            <comment>${param.document.comment}</comment>
                            <outputFormat>${param.document.output.format}</outputFormat>
                            <documentVersion>${param.document.version}</documentVersion>
                            <mapRelationships>${param.map.relationships.enabled}</mapRelationships>
                            <useLicenseExpressions>${param.license.expressions.enabled}</useLicenseExpressions>
                            <includeLicenseTexts>${param.include.license.texts.enabled}</includeLicenseTexts>
                            <includeAssets>${param.include.assets.enabled}</includeAssets>
                            <includeTechnicalProperties>${param.technical.properties.enabled}</includeTechnicalProperties>
                            <deriveAttributesFromPurl>${param.derive.attributes.from.purl.enabled}</deriveAttributesFromPurl>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>  <!-- This plugin is only relevant to deliver better error messages to the caller of this pom. -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventory.file</property>
                                    <message>You must set the parameter 'input.inventory.path' to specify the file of the input inventory.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.bom.file</property>
                                    <message>You must set the parameter 'output.bom.file' to specify the file of the output bom.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.document.name</property>
                                    <message>You must set the parameter 'param.document.name' to specify the name of the document.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.document.organization</property>
                                    <message>You must set the parameter param.document.organization</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.document.organization.url</property>
                                    <message>You must set the parameter param.document.organization.url</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>