    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-parent</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>report_create-document</artifactId>
    <packaging>pom</packaging>

    <properties>
        <param.property.selector.classification>DEFAULT</param.property.selector.classification>
        <param.property.selector.control>DEFAULT</param.property.selector.control>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>invoke-target-pom</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>mvn</executable>
                            <arguments>
                                <argument>-f</argument>
                                <argument>${param.template.dir}/pom.xml</argument>
                                <argument>clean</argument>
                                <argument>install</argument>
                                <argument>-P${param.document.type}_${param.document.language}</argument>

                                <argument>-Dasset.id=${param.asset.id}</argument>
                                <argument>-Dasset.name=${param.asset.name}</argument>
                                <argument>-Dasset.version=${param.asset.version}</argument>

                                <argument>-Dproduct.version=${param.product.version}</argument>
                                <argument>-Dproduct.name=${param.product.name}</argument>
                                <argument>-Dproduct.watermark=${param.product.watermark}</argument>

                                <argument>-Dinventory.path=${input.inventory.file}</argument>
                                <argument>-Dreference.inventory.path=${input.reference.inventory.file}</argument>

                                <argument>-Dreference.license.path=${input.reference.license.dir}</argument>
                                <argument>-Dreference.component.path=${input.reference.component.dir}</argument>
                                <argument>-Dcomputed.inventory.path=${computed.inventory.path}</argument>
                                <argument>-Dasset.descriptor.basedir=${input.asset.descriptor.dir}</argument>
                                <argument>-Dasset.descriptor.path=${input.asset.descriptor.path}</argument>

                                <argument>-Dpolicy.basedir=${input.security.policy.dir}</argument>
                                <argument>-Dinput.database=${env.vulnerability.mirror.dir}</argument>

                                <argument>-Doverview.advisors=${param.overview.advisors}</argument>

                                <argument>-Doutput.document.file=${output.document.file}</argument>

                                <argument>-Dproperty.selector.organization=${param.property.selector.organization}</argument>
                                <argument>-Dproperty.selector.classification=${param.property.selector.classification}</argument>
                                <argument>-Dproperty.selector.control=${param.property.selector.control}</argument>
                                <argument>-Dproperty.selector.language=${param.document.language}</argument>
                                <argument>-Dtemplate.dir=${param.template.dir}</argument>

                                <argument>-Dworkbench.processors.dir=${env.workbench.processors.dir}</argument>
                                <argument>-Dkontinuum.processors.dir=${env.kontinuum.processors.dir}</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>param.asset.id</property>
                                    <message>You must set the parameter 'param.asset.id' to specify the id of the asset.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.asset.name</property>
                                    <message>You must set the parameter 'param.asset.name' to specify the name of the asset.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.asset.version</property>
                                    <message>You must set the parameter 'param.asset.version' to specify the version of the asset</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.product.version</property>
                                    <message>You must set the parameter 'param.product.version' to specify the version of the product.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.product.name</property>
                                    <message>You must set the parameter 'param.product.name' to specify the name of the product.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.product.watermark</property>
                                    <message>You must set the parameter 'param.product.watermark' to specify the watermark of the product.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.inventory.file</property>
                                    <message>You must set the parameter 'input.inventory.file' to specify the file of the input inventory.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.reference.inventory.file</property>
                                    <message>You must set the parameter 'input.reference.inventory.file' to specify the file of the reference inventory.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.reference.license.dir</property>
                                    <message>You must set the parameter 'input.reference.license.dir' to specify the reference license path of the reference inventory.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.reference.component.dir</property>
                                    <message>You must set the parameter 'input.reference.component.dir' to specify the reference component path of the reference inventory.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.asset.descriptor.path</property>
                                    <message>You must set the parameter 'input.asset.descriptor.path' to specify the directory of the asset-descriptors.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.asset.descriptor.dir</property>
                                    <message>You must set the parameter 'input.asset.descriptor.dir' to specify the file of the asset-descriptor.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.document.type</property>
                                    <message>You must set the parameter 'param.document.type' to specify which type of document should be generated.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.document.language</property>
                                    <message>You must set the parameter 'param.document.language' to specify the language of the output document.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>env.workbench.processors.dir</property>
                                    <message>You must set the parameter 'env.workbench.processors.dir' to specify the path to the workbench processors.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>env.kontinuum.processors.dir</property>
                                    <message>You must set the parameter 'env.kontinuum.processors.dir' to specify the path to the kontinuum processors.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.document.file</property>
                                    <message>You must set the parameter 'output.document.file' to specify the target for generating the document.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.property.selector.organization</property>
                                    <message>You must set the parameter 'param.property.selector.organization' to select additional resources required by the document template.</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>