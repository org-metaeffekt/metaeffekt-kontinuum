    <parent>
        <groupId>com.metaeffekt.kontinuum</groupId>
        <artifactId>ae-kontinuum-processors</artifactId>
        <version>KONTINUUM-SNAPSHOT</version>
        <relativePath>../_common_/ae-kontinuum-processors.xml</relativePath>
    </parent>

    <artifactId>prepare_save-inspect-image</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <id>run-image-inspect</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>
                            <executable>docker</executable>
                            <arguments>
                                <argument>inspect</argument>
                                <argument>${param.image.id}:${param.image.version}</argument>
                            </arguments>
                            <outputFile>${output.dir}/${param.image.id}-${param.image.version}.json</outputFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>run-image-save</id>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>
                            <executable>docker</executable>
                            <arguments>
                                <argument>save</argument>
                                <argument>${param.image.id}:${param.image.version}</argument>
                                <argument>-o</argument>
                                <argument>${output.dir}/${param.image.id}-${param.image.version}.tar</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>  <!-- This plugin is only relevant to deliver better error messages to the caller of this pom. -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>param.image.id</property>
                                    <message>You must set the parameter param.image.id</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.image.version</property>
                                    <message>You must set the parameter param.image.version</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.dir</property>
                                    <message>You must set the parameter output.dir</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
