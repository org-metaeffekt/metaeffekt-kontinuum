    <parent>
        <groupId>com.metaeffekt.kontinuum</groupId>
        <artifactId>ae-kontinuum-processors</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../_common_/ae-kontinuum-processors.xml</relativePath>
    </parent>

    <artifactId>advise_enrich-with-reference</artifactId>
    <packaging>rar</packaging>

    <properties>
        <advisor.validation>false</advisor.validation>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.metaeffekt.core</groupId>
                <artifactId>ae-inventory-maven-plugin</artifactId>
                <version>${ae.core.version}</version>
                <executions>
                    <execution>
                        <id>enrich-with-reference-inventory</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>create-inventory-report</goal>
                        </goals>
                        <configuration>
                            <inventory>${input.inventory.file}</inventory>

                            <sourceInventoryDir>${input.reference.inventory.dir}</sourceInventoryDir>
                            <sourceInventoryIncludes>*.xls,*.xlsx,*.ser</sourceInventoryIncludes>

                            <failOnError>${advisor.validation}</failOnError>
                            <failOnBanned>${advisor.validation}</failOnBanned>
                            <failOnInternal>${advisor.validation}</failOnInternal>
                            <failOnUnknownVersion>${advisor.validation}</failOnUnknownVersion>
                            <failOnUnknown>${advisor.validation}</failOnUnknown>
                            <failOnDevelopment>${advisor.validation}</failOnDevelopment>
                            <failOnMissingLicense>${advisor.validation}</failOnMissingLicense>
                            <failOnMissingLicenseFile>${advisor.validation}</failOnMissingLicenseFile>
                            <failOnMissingNotice>${advisor.validation}</failOnMissingNotice>
                            <failOnDowngrade>${advisor.validation}</failOnDowngrade>
                            <failOnUpgrade>false</failOnUpgrade>

                            <!-- FIXME: we should also enable to produce a file here -->
                            <targetInventoryDir>${output.inventory.dir}</targetInventoryDir>
                            <targetInventoryPath>${output.inventory.path}</targetInventoryPath>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventory.file</property>
                                    <message>You must set the parameter 'input.inventory.file' to specify the input
                                        inventory to be enriched.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.inventory.dir</property>
                                    <message>You must set the parameter 'output.inventory.dir' to specify the directory
                                        where the output inventory is generated.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.inventory.path</property>
                                    <message>You must set the parameter 'output.inventory.path' to specify the path of
                                        the output inventory.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.reference.inventory.dir</property>
                                    <message>You must set the parameter 'input.reference.inventory.dir' to specify the
                                        directory containing the reference inventory files.</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
