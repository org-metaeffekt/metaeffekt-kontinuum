    <parent>
        <groupId>com.metaeffekt.kontinuum</groupId>
        <artifactId>ae-kontinuum-processors</artifactId>
        <version>KONTINUUM-SNAPSHOT</version>
        <relativePath>../_common_/ae-kontinuum-processors.xml</relativePath>
    </parent>

    <artifactId>advise_create-dashboard</artifactId>
    <packaging>pom</packaging>

    <properties>
        <env.vulnerability.assessment.api>NONE</env.vulnerability.assessment.api>

        <param.timeline.conf.enabled>true</param.timeline.conf.enabled>
        <param.timeline.max.threads>4</param.timeline.max.threads>
        <param.timeline.time.spent.max>10000</param.timeline.time.spent.max>

        <!-- FIXME-YWI: what is expected here as default -->
        <!-- <param.timeline.vuln.providers.list></param.timeline.vuln.providers.list> -->
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.artifact.analysis</groupId>
                <artifactId>ae-inventory-enrichment-plugin</artifactId>
                <version>${ae.artifact.analysis.version}</version>

                <executions>
                    <execution>
                        <id>generate-vulnerability-dashboard</id>
                        <goals>
                            <goal>generate-asset-dashboard</goal>
                        </goals>
                        <configuration>
                            <inventoryInputFile>${input.inventory.file}</inventoryInputFile>
                            <outputFile>${output.dashboard.file}</outputFile>
                            <mirrorDirectory>${env.vulnerability.mirror.dir}</mirrorDirectory>

                            <reportConfiguration>
                                <apiConfiguration>
                                    <apiType>${env.vulnerability.assessment.api}</apiType>
                                    <apiA>
                                        <baseUrl>api/v2</baseUrl>
                                        <ping>ping</ping>
                                        <currentUser>current_user</currentUser>
                                        <reserveAssessmentEventId>entity_id/assessment_event</reserveAssessmentEventId>
                                        <eventsSinceTimestampForDashboard>$[asset.current.Asset Id]/assessment_event/$[since_time]/$[asset.current.Version]</eventsSinceTimestampForDashboard>
                                        <putEventForDashboard>$[asset.current.Asset Id]/assessment_event/$[creation_time]/$[asset.current.Version]</putEventForDashboard>
                                        <logout>/logout</logout>
                                        <logoutMode>REDIRECT</logoutMode>
                                    </apiA>
                                </apiConfiguration>

                            </reportConfiguration>

                            <timelines>
                                <active>${param.timeline.conf.enabled}</active>
                                <maxThreads>${param.timeline.max.threads}</maxThreads>
                                <maximumTimeSpentPerTimeline>${param.timeline.time.spent.max}</maximumTimeSpentPerTimeline>
                                <vulnerabilityProviders>${param.timeline.vuln.providers.list}</vulnerabilityProviders>
                            </timelines>

                            <securityPolicy>
                                <files>
                                    <file>${param.security.policy.file}</file>
                                </files>
                                <activeIds>${param.security.policy.active.ids}</activeIds>
                            </securityPolicy>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventory.file</property>
                                    <message>You must set the parameter 'input.inventory.file' to specify the input
                                        inventory to create the dashboard from.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.security.policy.file</property>
                                    <message>You must set the parameter 'param.security.policy.file' to specify the security
                                        policy used for enrichment.
                                    </message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
