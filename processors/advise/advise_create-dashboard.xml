    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-parent</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>advise_create-dashboard</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.artifact.analysis</groupId>
                <artifactId>ae-inventory-enrichment-plugin</artifactId>
                <version>${ae.artifact.analysis.version}</version>

                <executions>
                    <execution>
                        <id>inventory-enrichment-advise-vulnerability-execution</id>
                        <goals>
                            <goal>enrich-inventory</goal>
                        </goals>
                        <configuration>
                            <inventoryInputFile>${input.inventory.file}</inventoryInputFile>
                            <mirrorDirectory>${vulnerability.mirror.dir}</mirrorDirectory>

                            <vulnerabilityAssessmentDashboardEnrichment>
                                <active>active</active>
                                <outputDashboardFile>${output.dashboard.file}</outputDashboardFile>
                                <maximumVulnerabilitiesPerDashboardCount>${maximum.vulnerabilities.per.dashboard.count}</maximumVulnerabilitiesPerDashboardCount>
                                <vulnerabilityIncludeFilter>${vulnerability.include.filter}</vulnerabilityIncludeFilter>
                                <maximumCpeForTimelinesPerVulnerability>${maximum.cpe.for.timelines.per.vulnerability}</maximumCpeForTimelinesPerVulnerability>
                                <maximumVulnerabilitiesPerTimeline>${maximum.vulnerabilities.per.timeline}</maximumVulnerabilitiesPerTimeline>
                                <maximumVersionsPerTimeline>${maximum.versions.per.timeline}</maximumVersionsPerTimeline>
                                <maximumTimeSpentOnTimelines>${maximum.time.spent.on.timelines}</maximumTimeSpentOnTimelines>
                                <maximumTimeSpentPerTimeline>${maximum.time.spent.per.timeline}</maximumTimeSpentPerTimeline>
                                <vulnerabilityTimelinesGlobalEnabled>${vulnerability.timelines.global.enabled}</vulnerabilityTimelinesGlobalEnabled>
                                <vulnerabilityTimelineHideIrrelevantVersions>${vulnerability.timeline.hide.irrelevant.versions}</vulnerabilityTimelineHideIrrelevantVersions>
                                <failOnVulnerabilityWithoutSpecifiedRisk>${fail.on.vulnerability.without.specified.risk}</failOnVulnerabilityWithoutSpecifiedRisk>
                                <failOnUnreviewedAdvisories>${fail.on.unreviewed.advisories}</failOnUnreviewedAdvisories>
                                <vulnerabilitySvgChartInterpolationMethod>${vulnerability.svg.chart.interpolation.method}</vulnerabilitySvgChartInterpolationMethod>
                                <detailLevels>${detail.levels}</detailLevels>
                            </vulnerabilityAssessmentDashboardEnrichment>

                            <securityPolicy>
                                <files>
                                    <file>${security.policy.file}</file>
                                </files>
                            </securityPolicy>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventory.file</property>
                                    <message>You must set the parameter 'input.inventory.file' to specify the input
                                        inventory to create the dashboard from.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.dashboard.file</property>
                                    <message>You must set the parameter 'output.dashboard.file' to specify the name and
                                        location of the created dashboard.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>vulnerability.mirror.dir</property>
                                    <message>You must set the parameter 'vulnerability.mirror.dir' to locate the
                                        vulnerability mirror data on the local system.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>security.policy.file</property>
                                    <message>You must set the parameter 'security.policy.file' to specify which security
                                        policy will be used for dashboard creation.
                                    </message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
