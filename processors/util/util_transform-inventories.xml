<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.metaeffekt.kontinuum</groupId>
        <artifactId>ae-kontinuum-processors</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../common/ae-kontinuum-processors.xml</relativePath>
    </parent>

    <artifactId>util_transform-inventories</artifactId>
    <packaging>jar</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.artifact.analysis</groupId>
                <artifactId>ae-kotlin-scripting-maven-plugin</artifactId>
                <version>${ae.artifact.analysis.version}</version>
                <executions>
                    <execution>
                        <id>exec</id>
                        <goals>
                            <goal>execute-script</goal>
                        </goals>
                        <configuration>
                            <kotlinScript>${input.kotlin.script.file}</kotlinScript>
                            <parameterMap>
                                <input.inventory.dir>${input.inventory.dir}</input.inventory.dir>
                                <output.inventory.dir>${output.inventory.dir}</output.inventory.dir>
                            </parameterMap>
                            <scriptExecutionClass>com.metaeffekt.artifact.analysis.scripting.kotlin.exec.InventoryScriptExecution</scriptExecutionClass>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.kotlin.script.file</property>
                                    <message>
                                        You must set the parameter 'input.kotlin.script.file' to specify the file of the kotlin script to be used for transformation.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.inventory.dir</property>
                                    <message>
                                        You must set the parameter 'input.inventory.dir' to specify the directory of the input inventory to be transformed.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.inventory.dir</property>
                                    <message>
                                        You must set the parameter 'output.inventory.dir' to specify the directory of the transformed output inventory.
                                    </message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>