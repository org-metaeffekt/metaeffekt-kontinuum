  <parent>
    <groupId>com.metaeffekt.kontinuum</groupId>
    <artifactId>ae-kontinuum-processors</artifactId>
    <version>WORKBENCH-SNAPSHOT</version>
    <relativePath>../_common_/ae-kontinuum-processors.xml</relativePath>
  </parent>

  <artifactId>util_aggregate-sources</artifactId>
  <properties>
    <project.build.directory>${target.dir}</project.build.directory>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.metaeffekt.core</groupId>
        <artifactId>ae-inventory-maven-plugin</artifactId>
        <version>${ae.core.version}</version>
        <executions>
          <execution>
            <id>aggregate-sources</id>
            <phase>process-resources</phase>
            <goals>
              <goal>aggregate-sources</goal>
            </goals>
            <configuration>
              <localRepository/>

              <inventoryPath>${input.inventory.file}</inventoryPath>

              <softwareDistributionAnnexSourcePath>${annex.source.dir}</softwareDistributionAnnexSourcePath>
              <retainedSourcesSourcePath>${retained.sources.dir}</retainedSourcesSourcePath>
              <alternativeArtifactSourceMapping>${alternative.artifact.source.mapping}</alternativeArtifactSourceMapping>

              <includeAllSources>${include.all.sources}</includeAllSources>
              <failOnMissingSources>${fail.on.missing.sources}</failOnMissingSources>

              <!-- The configurations below are set here with no placeholders as they contain complex configuration
                   which is contained in the pom and not any additional config file. -->
              <sourceRepositories>

                <!-- When using includeAllSources we have to mark those artifacts, where explicitly no sources are
                     intended to be included. An exclude repository in other words.
                -->
                <sourceRepository>
                  <id>No Source Repository</id>

                  <!-- a source repository without resolver or mirror configuration will not perform
                       any aggregation. The ignoreMatches flag only suppresses the message that
                       an artifact was skipped -->

                  <targetFolder>none</targetFolder>
                  <ignoreMatches>false</ignoreMatches>
                  <patterns>
                    <!-- patterns: "artifact:component:version:effectiveLicense"; Regular expressions start with '^' -->
                    <pattern>^ignore-me-.*\.jar</pattern>
                  </patterns>
                </sourceRepository>

                <sourceRepository>
                  <id>Internal / External Eclipse Mirrors</id>
                  <targetFolder>Original OSS</targetFolder>
                  <patterns>
                    <!-- patterns: "artifact:component:version:effectiveLicense"; Regular expressions start with '^' -->
                    <pattern>^org\.eclipse\..*_.*\.jar:^.*:^.*:^.*</pattern>
                  </patterns>
                  <eclipseMirror>
                    <mirrorUrls>
                      <url>https://builds.gradle.org:8001/eclipse/update-site/mirror/releases-rolling/features/</url>
                    </mirrorUrls>
                  </eclipseMirror>
                </sourceRepository>


                <sourceRepository>
                  <id>Maven Repo (Mapped)</id>

                  <!-- this variant shows how incomplete artifacts can be mapped to a maven repository -->

                  <targetFolder>Original OSS</targetFolder>
                  <patterns>
                    <pattern>^.*\.jar</pattern>
                  </patterns>
                  <componentMirror>
                    <mappings>
                      <map>^Bouncy Castle-.*:org/bouncycastle/$artifactId/$version/$artifactId-$version.$type</map>
                      <map>^bcpkix-jdk18on-([0-9]*\.[0-9]*).jar:org/bouncycastle/bcpkix-jdk18on/$1/bcpkix-jdk18on-$1.jar</map>
                    </mappings>
                    <mirrorUrls>
                      <url>https://repo1.maven.org/maven2/</url>
                    </mirrorUrls>
                  </componentMirror>
                </sourceRepository>

                <sourceRepository>

                  <!-- this variant shows how arbitrary (yet complete gav) artifacts can be mapped -->

                  <id>Maven Repo (Fallback)</id>
                  <targetFolder>Original OSS</targetFolder>
                  <patterns>
                    <pattern>^.*\.jar</pattern>
                  </patterns>
                  <mavenMirror />
                </sourceRepository>

              </sourceRepositories>

              <remoteRepositories/>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
