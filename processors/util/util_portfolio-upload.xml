<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-parent</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>util_portfolio-upload</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.portfolio.manager</groupId>
                <artifactId>ae-portfolio-manager-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>push-to-portfolio-manager</id>
                        <goals>
                            <goal>push</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>

                            <!-- url to the SwAM Portfolio Manager Endpoint -->
                            <serviceUrl>${portfolio.manager.url}</serviceUrl>
                            <!-- 'upload' user token for project; always pass as credential/secret -->
                            <token>${portfolio.manager.token}</token>
                            <!-- the modifier initial is the default -->
                            <modifier>initial</modifier>

                            <!-- path to the keystore; replace or configure -->
                            <keyStoreFile>${keystore.config.file}</keyStoreFile>
                            <!-- keystore password; always pass as credential/secret -->
                            <keyStorePassword>${keystore.password}</keyStorePassword>

                            <!-- path to the truststore; replace or configure -->
                            <trustStoreFile>${truststore.config.file}</trustStoreFile>
                            <!-- truststore password; always pass as credential/secret -->
                            <trustStorePassword>${truststore.password}</trustStorePassword>

                            <!-- the project name to upload to -->
                            <projectName>${product.name}</projectName>
                            <!-- the asset group (in the project) to upload to -->
                            <assetGroup>${product.name}:${product.version}</assetGroup>
                            <!-- the asset (in the project) the sbom represents -->
                            <asset>${product.artifact.id}:${product.version}</asset>
                            <!-- the path to the sbom/inventory to upload -->
                            <fileToPush>${input.file}</fileToPush>

                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>portfolio.manager.url</property>
                                    <message>You must set the parameter 'portfolio.manager.url'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>portfolio.manager.token</property>
                                    <message>You must set the parameter 'portfolio.manager.token'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>keystore.config.file</property>
                                    <message>You must set the parameter 'keystore.config.file'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>keystore.password</property>
                                    <message>You must set the parameter 'keystore.password'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>truststore.config.file</property>
                                    <message>You must set the parameter 'truststore.config.file'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>truststore.password</property>
                                    <message>You must set the parameter 'truststore.password'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>product.name</property>
                                    <message>You must set the parameter 'product.name'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>product.version</property>
                                    <message>You must set the parameter 'product.version'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>product.artifact.id</property>
                                    <message>You must set the parameter 'product.artifact.id'.</message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.file</property>
                                    <message>You must set the parameter 'input.file'.</message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
