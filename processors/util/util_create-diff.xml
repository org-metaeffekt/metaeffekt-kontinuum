    <parent>
        <groupId>com.metaeffekt.workbench</groupId>
        <artifactId>ae-workbench-parent</artifactId>
        <version>WORKBENCH-SNAPSHOT</version>
        <relativePath>../ae-workbench-parent.xml</relativePath>
    </parent>

    <artifactId>util_create-diff</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.artifact.analysis</groupId>
                <artifactId>ae-inventory-enrichment-plugin</artifactId>
                <version>${ae.artifact.analysis.version}</version>
                <executions>
                    <execution>
                        <id>vulnerability-differ</id>
                        <goals>
                            <goal>vulnerability-differ</goal>
                        </goals>

                        <!-- FIXME: currently only .xls files are supported -->
                        <configuration>
                            <referenceInventories1>
                                <file>${input.inventory.file}</file>
                            </referenceInventories1>

                            <referenceInventories2>
                                <file>${input.inventory.compare.file}</file>
                            </referenceInventories2>

                            <outputInventoryDiff1to2>${output.inventory.dir}/diff/${param.inventory.version}-to-${param.inventory.compare.version}-comparison.xls</outputInventoryDiff1to2>
                            <outputInventoryDiff2to1>${output.inventory.dir}/diff/${param.inventory.compare.version}-to-${param.inventory.version}-comparison.xls</outputInventoryDiff2to1>

                            <securityPolicyFile>${input.security.policy.file}</securityPolicyFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>input.inventory.file</property>
                                    <message>
                                        You must set the parameter 'input.inventory.file' to specify the base inventory
                                        to be compared.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.inventory.compare.file</property>
                                    <message>
                                        You must set the parameter 'input.inventory.compare.file' to specify the
                                        inventory to be compared with the base inventory.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>output.inventory.dir</property>
                                    <message>
                                        You must set the parameter 'output.inventory.dir' to specify the directory
                                        to which the output files should be saved.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.inventory.version</property>
                                    <message>
                                        You must set the parameter 'param.inventory.version' to specify the version
                                        of the base inventory which will be used for naming the output files.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.inventory.compare.version</property>
                                    <message>
                                        You must set the parameter 'param.inventory.compare.version' to specify the version
                                        of the compare inventory which will be used for naming the output files.
                                    </message>
                                </requireProperty>
                                <requireProperty>
                                    <property>input.security.policy.file</property>
                                    <message>You must set the parameter 'input.security.policy.file' to specify the security
                                        policy used for enrichment.
                                    </message>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>