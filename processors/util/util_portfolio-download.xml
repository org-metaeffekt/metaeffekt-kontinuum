<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.metaeffekt.kontinuum</groupId>
        <artifactId>ae-kontinuum-processors</artifactId>
        <version>KONTINUUM-SNAPSHOT</version>
        <relativePath>../_common_/ae-kontinuum-processors.xml</relativePath>
    </parent>

    <artifactId>util_portfolio-download</artifactId>

    <build>
        <plugins>
            <plugin>
                <groupId>com.metaeffekt.portfolio.manager</groupId>
                <artifactId>ae-portfolio-manager-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>pull-to-portfolio-manager</id>
                        <goals>
                            <goal>pull</goal>
                        </goals>
                        <phase>process-resources</phase>
                        <configuration>

                            <!-- url to the SwAM Portfolio Manager Endpoint -->
                            <serviceUrl>${param.portfolio.manager.url}</serviceUrl>
                            <!-- 'upload' user token for project; always pass as credential/secret -->
                            <token>${param.portfolio.manager.token}</token>
                            <!-- the modifier initial is the default -->
                            <modifier>initial</modifier>

                            <!-- path to the keystore; replace or configure -->
                            <keyStoreFile>${env.keystore.config.file}</keyStoreFile>
                            <!-- keystore password; always pass as credential/secret -->
                            <keyStorePassword>${env.keystore.password}</keyStorePassword>

                            <!-- path to the truststore; replace or configure -->
                            <trustStoreFile>${env.truststore.config.file}</trustStoreFile>
                            <!-- truststore password; always pass as credential/secret -->
                            <trustStorePassword>${env.truststore.password}</trustStorePassword>

                            <!-- the project name to upload to -->
                            <projectName>${param.product.name}</projectName>
                            <!-- the asset group (in the project) to upload to -->
                            <assetGroupQuery>${param.product.name}:${param.product.version}</assetGroupQuery>
                            <!-- the asset (in the project) the sbom represents -->
                            <assetQuery>${param.product.artifact.id}:${param.product.version}</assetQuery>
                            <!-- the path to the sbom/inventory to download -->
                            <targetDir>${output.inventory.dir}</targetDir>

                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>enforce-property</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireProperty>
                                    <property>output.inventory.dir</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.portfolio.manager.url</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.portfolio.manager.token</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.product.name</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.product.version</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>param.product.artifact.id</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>env.keystore.password</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>env.truststore.password</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>env.keystore.config.file</property>
                                </requireProperty>
                                <requireProperty>
                                    <property>env.truststore.config.file</property>
                                </requireProperty>
                            </rules>
                            <fail>true</fail>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
